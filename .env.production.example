# Dream AI Girl - Production Environment Variables
# Copiez ce fichier vers .env.production et remplissez les valeurs

# ============================================
# SÉCURITÉ (OBLIGATOIRE)
# ============================================
SECRET_KEY=your-super-secret-key-here-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-here-min-32-chars

# Pour générer des clés aléatoires:
# python -c "import secrets; print(secrets.token_urlsafe(32))"

# ============================================
# BASE DE DONNÉES
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-strong-password
DATABASE_URL=postgresql://postgres:change-this-strong-password@postgres:5432/dream_ai_prod

# Redis
REDIS_URL=redis://redis:6379/0

# ============================================
# APIs IA
# ============================================
# OpenRouter (pour chat IA)
OPENROUTER_API_KEY=sk-or-v1-your-key-here
# Obtenir: https://openrouter.ai/keys

# ElevenLabs (pour voice TTS)
ELEVENLABS_API_KEY=your-elevenlabs-key-here
# Obtenir: https://elevenlabs.io/

# ============================================
# STOCKAGE (AWS S3)
# ============================================
AWS_S3_BUCKET=dream-ai-media
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
CLOUDFRONT_URL=https://d1234567890.cloudfront.net

# Alternative: Cloudflare R2 (compatible S3)
# AWS_ENDPOINT_URL=https://your-account.r2.cloudflarestorage.com
# AWS_REGION=auto

# ============================================
# PAIEMENT (STRIPE)
# ============================================
STRIPE_SECRET_KEY=sk_test_your-test-key-or-sk_live_for-production
STRIPE_PUBLISHABLE_KEY=pk_test_your-test-key-or-pk_live_for-production
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Price IDs (créer dans Stripe Dashboard)
STRIPE_PREMIUM_PRICE_ID=price_premium_monthly
STRIPE_ELITE_PRICE_ID=price_elite_monthly

# ============================================
# FRONTEND
# ============================================
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_WS_URL=wss://chat.yourdomain.com
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_or_pk_live

# ============================================
# MONITORING (Optionnel)
# ============================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# ============================================
# MODÈLES SDXL (GPU)
# ============================================
SDXL_MODEL_ID=stabilityai/stable-diffusion-xl-base-1.0
SDXL_REFINER_ID=stabilityai/stable-diffusion-xl-refiner-1.0
SDXL_LORA_PATH=./models/lora/nsfw_lora.safetensors

# AnimateDiff
ANIMATEDIFF_BASE_MODEL=stabilityai/stable-diffusion-xl-base-1.0
MOTION_ADAPTER_ID=guoyww/animatediff-motion-adapter-sdxl-beta

# ============================================
# APPLICATION
# ============================================
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# CORS (séparé par virgules)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
