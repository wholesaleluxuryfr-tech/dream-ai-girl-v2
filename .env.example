# Dream AI Girl - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CREDENTIALS
# ============================================
POSTGRES_PASSWORD=your_postgres_password_here
REDIS_PASSWORD=your_redis_password_here
MONGO_PASSWORD=your_mongo_password_here
RABBITMQ_PASSWORD=your_rabbitmq_password_here

# ============================================
# SECURITY & AUTH
# ============================================
SECRET_KEY=your-super-secret-key-min-32-chars-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# ============================================
# AI SERVICES
# ============================================
# OpenRouter (for chat AI - Mistral/GPT)
OPENROUTER_API_KEY=sk-or-v1-xxxxx
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=mistralai/mistral-large-2

# Advanced AI Prompts (Chain-of-Thought reasoning, context awareness)
# Set to "false" to use basic prompts (cheaper, less sophisticated)
USE_ADVANCED_AI_PROMPTS=true
ADVANCED_PROMPTS_TEMPERATURE=1.0
ADVANCED_PROMPTS_MAX_TOKENS=180
ENABLE_COT_REASONING=true
ENABLE_PROACTIVE_MESSAGES=true

# Replicate (fallback for image generation)
REPLICATE_API_TOKEN=r8_xxxxx

# ElevenLabs (voice TTS)
ELEVENLABS_API_KEY=xxxxx

# Pinecone (vector database for memory)
PINECONE_API_KEY=xxxxx
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=dream-ai-memories

# Promptchan (NSFW image generation - legacy)
PROMPTCHAN_KEY=xxxxx

# ============================================
# MEDIA & STORAGE
# ============================================
# Supabase Storage (legacy - migration to S3)
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=xxxxx

# AWS S3 (primary media storage)
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=xxxxx
AWS_S3_BUCKET=dream-ai-media
AWS_REGION=us-east-1
AWS_CLOUDFRONT_DOMAIN=xxxxx.cloudfront.net

# Cloudflare (CDN & image optimization)
CLOUDFLARE_ACCOUNT_ID=xxxxx
CLOUDFLARE_API_TOKEN=xxxxx
CLOUDFLARE_ZONE_ID=xxxxx

# ============================================
# PAYMENT
# ============================================
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ============================================
# ANALYTICS & MONITORING
# ============================================
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
MIXPANEL_TOKEN=xxxxx
DATADOG_API_KEY=xxxxx

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# ============================================
# FRONTEND
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8002
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# PRODUCTION SETTINGS (comment out for dev)
# ============================================
# ENVIRONMENT=production
# DEBUG=false
# NEXT_PUBLIC_API_URL=https://api.dreamaigirl.com
# NEXT_PUBLIC_WS_URL=wss://ws.dreamaigirl.com
# NEXT_PUBLIC_APP_URL=https://dreamaigirl.com
